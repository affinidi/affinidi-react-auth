{
  "compilerOptions": {
    "strict": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "importHelpers": false,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": ["es2020", "dom"],
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "playground"],
  "ts-node": {
    "esm": true
  }
}
